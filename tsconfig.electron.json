{
	"compilerOptions": {
		"outDir": "./out-tsc/electron",
		"baseUrl": "",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"target": "ES2015",
		"module": "CommonJS",
		"types": [
			"node"
		],
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		]
	},
	"files": [
		"electron/main.ts",
		"src/ipc-consts/ipc-consts.ts",
		"src/environments/environment.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
